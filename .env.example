# URL pública do site — usada para gerar links de reset de senha nos e-mails
NEXT_PUBLIC_SITE_URL=http://localhost:3000  # Em produção: https://seu-dominio.com

# Supabase — obter em https://supabase.com/dashboard/project/<id>/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://<project-id>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...  # NUNCA expor no client — bypassa RLS

# Asaas — obter em https://www.asaas.com/customerConfig/index (Settings > API)
ASAAS_API_KEY=              # $aas_... (produção) ou $aas_sandbox_... (sandbox)
ASAAS_WEBHOOK_TOKEN=        # Token configurado no painel Asaas ao cadastrar o webhook
ASAAS_BASE_URL=             # https://api.asaas.com/v3 ou https://sandbox.asaas.com/api/v3

# Resend — obter em https://resend.com/api-keys
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@seu-dominio.com  # Domínio verificado no Resend
